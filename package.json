{
  "name": "cn-bpmn-modeler-vue-root",
  "private": true,
  "description": "基于 bpmn-js 的 Vue.js 插件，BPMN 2.0 渲染工具包与 Web 建模器",
  "keywords": [
    "vue",
    "vue3",
    "vueComponent",
    "component",
    "components",
    "frontend",
    "bpmn",
    "bpmn-js",
    "modeler"
  ],
  "author": "菜鸟",
  "packageManager": "pnpm@7.26.0",
  "engines": {
    "node": ">=16.5.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run -r dev",
    "size": "pnpm run -r size",
    "build": "pnpm run -r build",
    "build:dts": "pnpm run -r build:dts",
    "build:size": "pnpm run -r build:size",
    "lint": "pnpm run lint:script && pnpm run lint:html",
    "lint:script": "prettier -c --parser typescript \"packages/*/{src,__tests__,e2e}/**/*.[jt]s?(x)\"",
    "lint:html": "prettier -c --parser html \"packages/**/*.html\"",
    "lint:fix": "pnpm run lint:script --write && pnpm run lint:html --write",
    "test": "pnpm run -r test"
  },
  "dependencies": {
    "vue": "^3.5.12",
    "bpmn-js": "^17.8.1",
    "diagram-js": "^14.7.1",
    "@vueuse/core": "^11.2.0"
  },
  "devDependencies": {
    "vite": "^5.4.11",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vue-devtools": "^7.6.4",
    "vue-tsc": "^2.1.10",
    "eslint": "^9.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-vue": "^9.31.0",
    "lint-staged": "^15.2.10",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/node": "^22.9.0",
    "@vitejs/plugin-vue": "^5.2.0",
    "@vitejs/plugin-vue-jsx": "^4.1.0",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "less": "^4.2.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "unplugin-auto-import": "^0.18.4",
    "unplugin-vue-components": "^0.27.4"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "@types/react",
        "react-dom"
      ]
    }
  }
}
